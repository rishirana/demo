<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/d"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.rishi.bank.Admin_create_new"
    tools:showIn="@layout/activity_admin_create_new">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="create new account"
        android:id="@+id/create_new"
        android:layout_above="@+id/display"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textStyle="bold"
        android:textColor="#080808"
        android:background="#a58ace"
        android:textSize="17dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="display info of new created account"
        android:id="@+id/display"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="false"
        android:onClick="showinfo"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#e7a2e5"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create User"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/create_new"
        android:layout_alignStart="@+id/create_new"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_marginLeft="55dp"
        android:textColor="#ffffffff" />
</RelativeLayout>
