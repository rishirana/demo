<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.rishi.bank.UserApplication"
    tools:showIn="@layout/activity_user_application"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Form"
        android:textColor="#2546ee"
        android:textSize="30dp"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/n1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="name"
        android:layout_marginLeft="20dp"
        android:textColorHint="#47adb3"
        android:textIsSelectable="false"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/m1"
        android:layout_below="@+id/n1"
        android:layout_centerHorizontal="true"
        android:hint="mobile"
        android:layout_marginLeft="20dp"
        android:textColorHint="#47adb3"
        android:layout_marginRight="20dp" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender"
            android:layout_marginTop="10dp"
            android:textColor="#47adb3" />

        <Spinner
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner"
            android:layout_weight="3">

        </Spinner>

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dob1"
            android:hint="dob"
            android:layout_alignBaseline="@+id/adminid"
            android:layout_alignBottom="@+id/adminid"
            android:layout_alignLeft="@+id/email1"
            android:layout_alignStart="@+id/email1"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColorHint="#47adb3" />
    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Email id"
        android:layout_marginLeft="20dp"
        android:textColorHint="#47adb3"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password1"
        android:hint="password"
        android:layout_above="@+id/email1"
        android:layout_marginLeft="20dp"
        android:textColorHint="#47adb3"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cnfrmpswd1"
        android:hint="confirm password"
        android:layout_below="@+id/email1"
        android:layout_alignLeft="@+id/email1"
        android:layout_alignStart="@+id/email1"
        android:layout_marginLeft="20dp"
        android:textColorHint="#47adb3"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/amount"
        android:hint="amount"
        android:layout_marginLeft="20dp"
        android:textColorHint="#47adb3"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text=" open account"
        android:id="@+id/add"
        android:layout_below="@+id/cnfrmpswd1"
        android:layout_alignRight="@+id/cnfrmpswd1"
        android:layout_alignEnd="@+id/cnfrmpswd1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.26"
        android:layout_marginLeft="20dp"
        android:textColor="#2426ae"
        android:background="#ddc4c4"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Already Have An Account?"
        android:id="@+id/textView12"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/user_login"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textColor="#a95656"
        android:onClick="login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp" />

</LinearLayout>

