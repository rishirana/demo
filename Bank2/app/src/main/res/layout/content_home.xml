<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.rishi.bank.HomeActivity"
    tools:showIn="@layout/activity_home"
    android:background="@drawable/b">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:id="@+id/b1"
        android:onClick="admin1"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:background="#090909"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="USER"
        android:id="@+id/b2"
        android:onClick="userlogin1"
        android:textSize="30dp"
        android:background="#453f66"
        android:textColor="#ffffff"
        android:layout_below="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RiShI"
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:layout_marginLeft="200dp"
        android:textColor="#131313"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="m-Vnk"
        android:id="@+id/textView17"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#384d4b"
        android:layout_below="@+id/textView16"
        android:layout_alignRight="@+id/b1"
        android:layout_alignEnd="@+id/b1"
        android:layout_marginLeft="160dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apki PocKet Main....."
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textIsSelectable="false"
        android:textStyle="italic"
        android:textSize="25dp" />
</RelativeLayout>
