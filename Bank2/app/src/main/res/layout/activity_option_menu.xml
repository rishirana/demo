<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.rishi.bank.option_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textColor="#2546ee"
        android:textSize="30dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="25dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/n1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="name"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/m1"
        android:layout_below="@+id/n1"
        android:layout_centerHorizontal="true"
        android:hint="mobile"
        android:layout_marginBottom="20dp" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dob1"
            android:hint="dob"
            android:layout_alignBaseline="@+id/adminid"
            android:layout_alignBottom="@+id/adminid"
            android:layout_alignLeft="@+id/email1"
            android:layout_alignStart="@+id/email1"
            android:layout_marginTop="5dp"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Email id"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password1"
        android:hint="password"
        android:layout_above="@+id/email1"
        android:layout_marginBottom="20dp" />




    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="send Request"
        android:id="@+id/update"
        android:layout_below="@+id/cnfrmpswd1"
        android:layout_alignRight="@+id/cnfrmpswd1"
        android:layout_alignEnd="@+id/cnfrmpswd1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.26" />
</LinearLayout>
