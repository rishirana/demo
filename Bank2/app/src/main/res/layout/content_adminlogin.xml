<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.rishi.bank.Adminlogin"
    tools:showIn="@layout/activity_adminlogin"
    android:background="@drawable/unnamed">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="80dp"
        android:textColor="#2f46ae"
        android:textSize="30dp"
        android:id="@+id/textView7" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email1"
        android:hint="Email Id"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="25dp"
        android:layout_alignLeft="@+id/password1"
        android:layout_alignStart="@+id/password1"
        android:textColorHint="#855858" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password1"
        android:layout_below="@+id/email1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Password"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColorHint="#855858" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register Here..."
        android:id="@+id/b1"
        android:onClick="register"
        android:layout_below="@+id/password1"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:background="#d3c3f6" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" Login"
        android:id="@+id/b2"
        android:layout_alignTop="@+id/password1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:textColor="#2426ae"
        android:background="#ddc4c4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wanna Create New Admin?"
        android:id="@+id/textView13"
        android:layout_below="@+id/b2"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="ForGot PassWord ?"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/b1"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="25dp" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="reset here"
        android:id="@+id/reset"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1"
        android:layout_marginTop="10dp"
        android:background="#f4bd7b"
        android:textColor="#5e4949"
        android:layout_marginRight="15dp" />



</RelativeLayout>
