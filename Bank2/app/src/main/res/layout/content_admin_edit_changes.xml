<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/d"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.rishi.bank.Admin_edit_changes"
    tools:showIn="@layout/activity_admin_edit_changes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Information"
        android:id="@+id/textView34"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Apply Changes"
        android:id="@+id/b1"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/textView34"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#8495bf" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Changes"
        android:id="@+id/b2"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/b1"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"
        android:layout_alignRight="@+id/b1"
        android:layout_alignEnd="@+id/b1"
        android:background="#b39ec9" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/b3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:onClick="back"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#00ffffff"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you can see changes by clicking below"
        android:id="@+id/textView19"
        android:layout_below="@+id/b1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="19dp"
        android:textColor="#d38de1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>
