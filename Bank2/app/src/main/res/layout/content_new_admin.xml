<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.rishi.bank.NewAdmin"
    tools:showIn="@layout/activity_new_admin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/n1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="name"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="#47adb3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/mobile"
        android:layout_below="@+id/n1"
        android:layout_centerHorizontal="true"
        android:hint="mobile"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:textColorHint="#47adb3" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender"
            android:layout_marginTop="10dp"
            android:textColor="#47adb3" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner">

        </Spinner>
    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dob1"
        android:hint="dob"
        android:layout_alignBaseline="@+id/adminid"
        android:layout_alignBottom="@+id/adminid"
        android:layout_alignLeft="@+id/email1"
        android:layout_alignStart="@+id/email1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="#47adb3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminid"
        android:hint="UserId"
        android:layout_alignBaseline="@+id/password1"
        android:layout_alignBottom="@+id/password1"
        android:layout_alignLeft="@+id/dob1"
        android:layout_alignStart="@+id/dob1"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="#47adb3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Email id"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="#47adb3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password1"
        android:hint="password"
        android:layout_above="@+id/email1"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="#47adb3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cnfrmpswd1"
        android:hint="confirm password"
        android:layout_below="@+id/email1"
        android:layout_alignLeft="@+id/email1"
        android:layout_alignStart="@+id/email1"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColorHint="#47adb3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="create"
        android:id="@+id/button"
        android:layout_below="@+id/cnfrmpswd1"
        android:layout_alignRight="@+id/cnfrmpswd1"
        android:layout_alignEnd="@+id/cnfrmpswd1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.26"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textStyle="bold"
        android:textColor="#5483f0"
        android:background="#c39ddd"
        android:textSize="22dp" />

</LinearLayout>
