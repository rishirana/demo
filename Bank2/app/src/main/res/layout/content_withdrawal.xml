<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blu"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.rishi.bank.Withdrawal"
    tools:showIn="@layout/activity_withdrawal">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/acont"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:hint="Account No"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:textStyle="italic"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Withdrawal"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:textSize="35dp"
        android:layout_alignRight="@+id/acont"
        android:layout_alignEnd="@+id/acont"
        android:layout_alignLeft="@+id/acont"
        android:layout_alignStart="@+id/acont"
        android:textColor="#ffffffff"
        android:layout_marginLeft="35dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/withdraw"
        android:layout_below="@+id/acont"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:hint="Withdrawal Amount"
        android:inputType="number"
        android:textColorHint="#ffffffff"
        android:textStyle="italic"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/submit"
        android:layout_below="@+id/withdraw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#d3c86e"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />
</RelativeLayout>
